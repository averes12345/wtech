.nav-wrapper {
        display: grid;
        align-items: center;
}

.visuallyhidden {
        border: 0;
        clip: rect(0 0 0 0);
        height: auto;
        margin: 0;
        overflow: hidden;
        padding: 0;
        position: absolute;
        width: 1px;
        white-space: nowrap;
}

nav {
        border-top: 1px solid #eee;
        margin-top: 1em;
        margin: auto;
        padding-top: 0.5em;
        font: 1.2em sans-serif;

        display: flex;
        justify-content: center;
        justify-self: center;
}

.pagination {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
}

.pagination li {
        margin: 0 1px;
}

.pagination a {
        display: block;
        padding: 0.5em 1em;
